@page "/login"
@inject ILoginService loginService
@inject NavigationManager navigate
@inject Blazored.SessionStorage.ISyncSessionStorageService sessionStorage
@inject IJSRuntime JS

<PageTitle>Login Page</PageTitle>

<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="/img/mitra10.png" style="width: 185px;" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1">Welcome to BPI Application</h4>
                                </div>

                                <EditForm Model="@user" OnValidSubmit="@checkLogin">
                                    <p>Please login to your Mitra10 account</p>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="emailInput"><b>Username</b></label>
                                        <input @bind="user.userName" type="email" id="emailInput" class="form-control" placeholder="Email" />
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="passwordInput"><b>Password</b></label>
                                        <input @bind="user.password" type="password" id="passwordInput" class="form-control" placeholder="Password" />
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-primary btn-block fa-lg mb-3" type="submit">
                                            Log in 
                                            @if (isLoginProgress)
                                            {
                                                <span id="spinnerLogin" class="spinner-border spinner-border-sm"></span>
                                            }
                                        </button>
                                    </div>
                                </EditForm>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">We are more than just a company</h4>
                                <p class="small mb-0">
                                    Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
                                    tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud
                                    exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
